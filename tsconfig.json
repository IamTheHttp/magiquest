{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "baseUrl": "src/",
    "paths": {
      "*": [
        "*",
        "gameEngine/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/.dll/**/*",
    "node_modules"
  ]
}