{
  "name": "magiquest",
  "private": true,
  "version": "0.0.1",
  "description": "Magic Quest Game!",
  "scripts": {
    "prebuild": "npm run formatcode",
    "build": "tsc && rm -rf ./dist && rollup -c",
    "bundle": "rollup -c",
    "bundle:watch": "npm run bundle -- -w",
    "build:watch": "npm run build -- -w",
    "pretest": "npm run formatcode ",
    "test": "tsc && jest",
    "test:watch": "npm run test -- --watch",
    "test:commit": "npm run build && jest",
    "test:coverage": "npm run test -- --coverage",
    "prestart": "npm run formatcode",
    "start": "npm run bundle:watch & live-server ./dist",
    "start:editor": "node Editor/index.js",
    "release": "release-it",
    "formatcode": "prettier --write --print-width 120 --single-quote --no-bracket-spacing --trailing-comma none src __tests__ Editor *.js *.json"
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-url": "^6.1.0",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "bootstrap": "^3.3.7",
    "canvas": "^2.9.0",
    "core-js": "3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "game-platform": "^3.0.0",
    "generate-source-map": "0.0.5",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-canvas-mock": "2.1.1",
    "live-server": "^1.2.1",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "rollup": "^2.66.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-includepaths": "^0.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "sass": "^1.49.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@jackfranklin/rollup-plugin-import-glob": "^0.1.0",
    "@rollup/plugin-html": "^0.2.4",
    "@web/dev-server": "^0.1.29",
    "prettier": "^2.5.1"
  }
}
