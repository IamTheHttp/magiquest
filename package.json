{
  "name": "magiquest",
  "private": true,
  "version": "0.0.1",
  "description": "Magic Quest Game!",
  "scripts": {
    "prebuild": "npm run formatcode",
    "build": "tsc && rm -rf ./dist && rollup -c",
    "bundle": "rollup -c",
    "bundle:watch": "npm run bundle -- -w",
    "build:watch": "npm run build -- -w",
    "pretest": "npm run formatcode ",
    "test": "tsc && jest",
    "test:watch": "npm run test -- --watch",
    "test:commit": "npm run build && jest",
    "test:coverage": "npm run test -- --coverage",
    "prestart": "npm run formatcode",
    "start": "npm run bundle:watch & live-server ./dist",
    "start:editor": "cd Editor; npm start",
    "release": "release-it",
    "formatcode": "prettier --write --print-width 120 --single-quote --no-bracket-spacing --trailing-comma none src __tests__ Editor *.js *.json"
  },
  "dependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-url": "^7.0.0",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "bootstrap": "^5.2.0",
    "canvas": "^2.9.3",
    "core-js": "^3.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "game-platform": "^3.0.1",
    "generate-source-map": "0.0.5",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.0.1",
    "live-server": "^1.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-includepaths": "^0.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "sass": "^1.54.8",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@jackfranklin/rollup-plugin-import-glob": "^0.1.0",
    "@rollup/plugin-html": "^0.2.4",
    "@web/dev-server": "^0.1.34",
    "prettier": "^2.7.1"
  }
}
