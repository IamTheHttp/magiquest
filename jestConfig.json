{
  "modulePaths": [
    "<rootDir>/",
    "<rootDir>/src"
  ],
  "testRegex": "test.js$|test.ts$",
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/develop.{js, jsx, ts, tsx}",
    "!src/.dll/*",
    "!src/polyfill/*.*",
    "!src/index.ts",
    "!src/levels/*.*",
    "!src/pageSetup.tsx"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 85,
      "statements": 85
    }
  },
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "node_modules/jarb/lib/statics/jest/__mocks__/fileMock.js",
    "\\.(css|less|scss)$": "node_modules/jarb/lib/statics/jest/__mocks__/styleMock.js"
  },
  "setupFiles": [
    "<rootDir>/node_modules/jarb/lib/testSetup.js",
    "<rootDir>/src/polyfill/rAF.ts",
    "jest-canvas-mock"
  ],
  "preset": "ts-jest",
  "moduleDirectories": [
    "./src",
    "./src/gameEngine",
    "node_modules"
  ],
  "bail": true
}